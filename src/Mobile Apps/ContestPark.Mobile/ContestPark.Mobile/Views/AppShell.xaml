<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="ContestPark.Mobile.Views.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:i18n="clr-namespace:ContestPark.Mobile.AppResources"
    xmlns:icons="clr-namespace:ContestPark.Mobile.Icons"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ContestPark.Mobile.Views"
    x:Name="appShell"
    FlyoutBackgroundImage="left_menu_background.png"
    FlyoutBackgroundImageAspect="AspectFill"
    FlyoutBehavior="Disabled"
    FlyoutIcon="menuicon.png"
    mc:Ignorable="d">
    <Shell.Resources>
        <ResourceDictionary>

            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="White" />
                <Setter Property="Shell.ForegroundColor" Value="Black" />
                <Setter Property="Shell.TitleColor" Value="Black" />
                <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
                <Setter Property="Shell.UnselectedColor" Value="#95000000" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="White" />
                <Setter Property="Shell.TabBarForegroundColor" Value="Black" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="#95000000" />
                <Setter Property="Shell.TabBarTitleColor" Value="Black" />
            </Style>
            <Style BasedOn="{StaticResource BaseStyle}" TargetType="TabBar" />
        </ResourceDictionary>
    </Shell.Resources>
    <!--  tabbar  -->
    <TabBar>
        <Tab Title="{i18n:Translate Categories}" Route="categories">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource icomoon}" Glyph="{x:Static icons:ContestParkIcon.TabCategories}" />
            </Tab.Icon>

            <ShellContent>
                <views:CategoriesView />
            </ShellContent>
        </Tab>
        <Tab Title="{i18n:Translate Invite}" Route="invite">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource icomoon}" Glyph="{x:Static icons:ContestParkIcon.TabInvite}" />
            </Tab.Icon>
            <ShellContent>
                <views:InviteView />
            </ShellContent>
        </Tab>
        <Tab Title="{i18n:Translate Chat}" Route="chat">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource icomoon}" Glyph="{x:Static icons:ContestParkIcon.TabChat}" />
            </Tab.Icon>
            <ShellContent>
                <views:ChatView />
            </ShellContent>
        </Tab>
        <Tab Title="{i18n:Translate Profile}" Route="profile">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource icomoon}" Glyph="{x:Static icons:ContestParkIcon.TabProfile}" />
            </Tab.Icon>
            <ShellContent>
                <views:MyProfileView />
            </ShellContent>
        </Tab>
    </TabBar>

    <!--  Left menu header  -->
    <Shell.FlyoutHeader>
        <views:AppShellHeaderView />
    </Shell.FlyoutHeader>

    <!--  left menü item list  -->
    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="ContestStoreView"
        IconImageSource="conteststore.svg"
        Text="{i18n:Translate ContestStore}" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="WinningsView"
        IconImageSource="money_bag.svg"
        Text="{i18n:Translate ConvertToCash}" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="BalanceCodeView"
        IconImageSource="balance.svg"
        Text="{i18n:Translate BalanceCode}" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="SettingsView"
        IconImageSource="settings.svg"
        Text="{i18n:Translate Settings}" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="facebook"
        IconImageSource="facebook.svg"
        Text="Facebook" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="twitter"
        IconImageSource="twitter.svg"
        Text="Twitter" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="instagram"
        IconImageSource="instagram.svg"
        Text="Instagram" />

    <Shell.MenuItemTemplate>
        <DataTemplate>
            <views:AppShellListItemView />
        </DataTemplate>
    </Shell.MenuItemTemplate>
</Shell>
