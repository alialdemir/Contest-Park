        IconImageSource="{StaticResource IconFacebook}"
        Text="Facebook" />

    <MenuItem
        Clicked="MenuItem_Clicked"
        CommandParameter="https://www.twitter.com/contestpark"
        IconImageSource="{StaticResource IconTwitter}"
        Text="Twitter" />

