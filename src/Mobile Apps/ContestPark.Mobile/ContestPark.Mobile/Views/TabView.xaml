<?xml version="1.0" encoding="utf-8" ?>
<icon:IconTabbedPage
    prism:ViewModelLocator.AutowireViewModel="True"
    x:Class="ContestPark.Mobile.Views.TabView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ContestPark.Mobile.Views"
    xmlns:icon="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms">
    <icon:IconTabbedPage.Children>

        <!-- CategoriesPage -->
        <pages:CategoriesView />

        <!-- ChatAllPage  plugin:TabBadge.BadgeText="{Binding BadgeCount}"-->
        <pages:ChatView />

        <!-- NotificationsPage plugin:TabBadge.BadgeText="{Binding BadgeCount}" -->
        <pages:NotificationsView />

        <!-- ProfilePage -->
        <pages:ProfileView />
    </icon:IconTabbedPage.Children>
</icon:IconTabbedPage>