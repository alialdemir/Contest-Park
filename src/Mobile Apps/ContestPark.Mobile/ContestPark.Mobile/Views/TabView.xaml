<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    prism:ViewModelLocator.AutowireViewModel="True"
    x:Class="ContestPark.Mobile.Views.TabView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ContestPark.Mobile.Views"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    android:TabbedPage.ToolbarPlacement="Bottom"
    android:TabbedPage.BarItemColor="#66000000"
    android:TabbedPage.BarSelectedItemColor="{StaticResource Black}"
    BarBackgroundColor="{StaticResource Primary}"
    BarTextColor="{StaticResource Black}">
    <TabbedPage.Children>
        <!-- CategoriesPage -->
