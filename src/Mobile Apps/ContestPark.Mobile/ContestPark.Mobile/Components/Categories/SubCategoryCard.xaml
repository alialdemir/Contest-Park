<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ContestPark.Mobile.Components.SubCategoryCard"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cacheImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:effects="clr-namespace:ContestPark.Mobile.Components.LongPressedEffect"
    xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    x:Name="subCategoryCard">
    <ContentView.Content>
        <Grid
            effects:LongPressedEffect.LongPressed="{Binding Path=SubCategoriesDisplayActionSheetCommand, Source={x:Reference subCategoryCard}}"
            effects:LongPressedEffect.SingleTap="{Binding Path=PushCategoryDetailViewCommand, Source={x:Reference subCategoryCard}}"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>

            <Grid.Effects>
                <effects:LongPressedEffect />
            </Grid.Effects>

            <cacheImage:CachedImage
                x:Name="imgSubCategoryImageSource"
                Grid.Row="0"
                Grid.Column="0"
                Aspect="AspectFit"
                CacheDuration="365"
                DownsampleToViewSize="true"
                HeightRequest="73"
                WidthRequest="73" />

            <Label
                x:Name="lblSubCategoryName"
                Grid.Row="1"
                Grid.Column="0"
                FontFamily="{DynamicResource SofiaProMedium}"
                FontSize="13"
                HorizontalTextAlignment="Center"
                TextColor="#404040" />

            <ffimageloadingsvg:SvgCachedImage
                x:Name="goldBadge"
                HeightRequest="42"
                HorizontalOptions="End"
                Source="ContestSingleCoin.svg"
                TranslationX="6"
                TranslationY="6"
                VerticalOptions="End"
                WidthRequest="42" />

            <Label
                x:Name="lblDisplayPrice"
                Margin="0"
                FontSize="14"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                TextColor="Black"
                TranslationX="30"
                TranslationY="28"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center" />
        </Grid>
    </ContentView.Content>
</ContentView>
