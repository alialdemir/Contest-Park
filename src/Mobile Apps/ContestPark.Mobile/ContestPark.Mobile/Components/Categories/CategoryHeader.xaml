<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ContestPark.Mobile.Components.CategoryHeader"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:ContestPark.Mobile.AppResources"
    x:Name="page">
    <ContentView.Content>
        <StackLayout Margin="0,0,0,20" Orientation="Horizontal">
            <Label
                FontAttributes="Bold"
                FontFamily="{DynamicResource SofiaProRegular}"
                FontSize="14"
                Text="{Binding Path=CategoryName, Source={x:Reference page}}"
                TextColor="#404040"
                VerticalOptions="Center" />

            <Label
                FontAttributes="Bold"
                FontFamily="{DynamicResource SofiaProRegular}"
                FontSize="14"
                HorizontalOptions="EndAndExpand"
                Text="{i18n:Translate SeeAll}"
                TextColor="#FFC575"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=SeeAllPressed, Source={x:Reference page}}" CommandParameter="{Binding Path=SeeAllCommandParameter, Source={x:Reference page}}" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentView.Content>
</ContentView>
