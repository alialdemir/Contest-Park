<?xml version="1.0" encoding="UTF-8" ?>
<yummy:PancakeView
    x:Class="ContestPark.Mobile.Components.StylishFrame"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:ContestPark.Mobile.Converters.Quiz.StylishFrameTextColor"
    xmlns:image="clr-namespace:ContestPark.Mobile"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="stylishFrame"
    BackgroundColor="{Binding Path=Answer.Color, Source={x:Reference stylishFrame}}"
    CornerRadius="8"
    Elevation="8"
    HasShadow="True"
    HeightRequest="56"
    WidthRequest="300">
    <yummy:PancakeView.Resources>
        <ResourceDictionary>
            <converter:StylishFrameTextColorConverter x:Key="sftcc" />
        </ResourceDictionary>
    </yummy:PancakeView.Resources>
    <yummy:PancakeView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="56" />
            </Grid.RowDefinitions>

            <Image
                HeightRequest="55"
                HorizontalOptions="Start"
                IsVisible="{Binding Path=Answer.IsLeftArrowVisible, Source={x:Reference stylishFrame}}"
                Source="{image:ImageResource RightArrow.png}"
                TranslationX="-10"
                VerticalOptions="Center"
                WidthRequest="55" />

            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontFamily="{StaticResource SofiaProRegular}"
                FontSize="19"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Text="{Binding Path=Answer.Answers, Source={x:Reference stylishFrame}}"
                TextColor="{Binding Path=Answer.Color, Source={x:Reference stylishFrame}, Converter={StaticResource sftcc}}"
                VerticalOptions="CenterAndExpand" />

            <Image
                HeightRequest="55"
                HorizontalOptions="End"
                IsVisible="{Binding Path=Answer.IsRightArrowVisible, Source={x:Reference stylishFrame}}"
                Source="{image:ImageResource LeftArrow.png}}"
                TranslationX="10"
                VerticalOptions="Center"
                WidthRequest="55" />
        </Grid>
    </yummy:PancakeView.Content>
</yummy:PancakeView>
