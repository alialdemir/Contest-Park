<?xml version="1.0" encoding="UTF-8" ?>
<Frame x:Class="ContestPark.Mobile.Components.StylishFrame"
       xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Name="page"
       BackgroundColor="{Binding Path=Answer.Color, Source={x:Reference page}}"
       CornerRadius="8"
       HasShadow="True"
       HeightRequest="100"
       HorizontalOptions="FillAndExpand"
       IsClippedToBounds="True"
       VerticalOptions="FillAndExpand">
    <Frame.Content>
        <Label FontAttributes="Bold"
               HorizontalOptions="Center"
               Text="{Binding Path=Answer.Answers, Source={x:Reference page}}"
               TextColor="Black"
               VerticalOptions="Center" />
    </Frame.Content>
</Frame>    