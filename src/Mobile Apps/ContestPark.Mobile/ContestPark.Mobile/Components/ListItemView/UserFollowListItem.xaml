<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ContestPark.Mobile.Components.UserFollowListItem"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:ContestPark.Mobile.Components"
    xmlns:converter="clr-namespace:ContestPark.Mobile.Converters"
    xmlns:icon="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
    x:Name="userFollowListItemPage">
    <ContentView.Resources>
        <ResourceDictionary>
            <converter:IconConverter x:Key="fbc" />
            <converter:FollowButtonVisibleConverter x:Key="fbvc" />
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid
            Padding="8,4,8,4"
            BackgroundColor="{StaticResource ListBackgroundColor}"
            RowSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="25" />
                <RowDefinition Height="1" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>

            <components:CircleImage
                Grid.RowSpan="2"
                Grid.Column="0"
                Command="{Binding Path=GotoProfilePageCommand, Source={x:Reference userFollowListItemPage}}"
                CommandParameter="{Binding UserName}"
                Source="{Binding ProfilePicturePath}" />

            <Label
                Grid.Row="0"
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="Default"
                LineBreakMode="TailTruncation"
                Text="{Binding FullName}"
                TextColor="White" />

            <components:HtmlLabel
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                FontSize="Small"
                LineBreakMode="TailTruncation"
                Text="{Binding UserName, StringFormat='@{0:N}'}"
                TextColor="White" />

            <icon:IconButton
                Grid.RowSpan="2"
                Grid.Column="2"
                BackgroundColor="Transparent"
                Command="{Binding Path=RightButtonCommand, Source={x:Reference userFollowListItemPage}}"
                CommandParameter="{Binding UserId}"
                FontSize="20"
                HorizontalOptions="Start"
                IsVisible="{Binding Path=UserId, Converter={StaticResource fbvc}}"
                Text="{Binding Path=IconStatus, Source={x:Reference userFollowListItemPage}, Converter={StaticResource fbc}}"
                TextColor="{StaticResource Red}" />

            <components:Line
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2" />
        </Grid>
    </ContentView.Content>
</ContentView>
