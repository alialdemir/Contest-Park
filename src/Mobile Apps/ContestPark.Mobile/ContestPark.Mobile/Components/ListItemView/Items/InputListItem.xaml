<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ContestPark.Mobile.Components.InputListItem"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <ContentView.Content>
        <yummy:PancakeView
            BackgroundColor="{StaticResource White}"
            CornerRadius="{Binding CornerRadius}"
            Elevation="6"
            HasShadow="True"
            IsClippedToBounds="True"
            VerticalOptions="Start">
            <Grid Padding="16,0,16,8" ColumnSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="55" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Grid.Row="0" Grid.Column="0">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="{StaticResource icomoon}"
                            Glyph="{Binding Icon}"
                            Size="32"
                            Color="{StaticResource SettingsIconColor}" />
                    </Image.Source>
                </Image>

                <Entry
                    Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    FontFamily="{StaticResource SofiaProLight}"
                    FontSize="13"
                    IsPassword="{Binding IsPassword}"
                    Keyboard="Text"
                    Placeholder="{Binding Placeholder}"
                    PlaceholderColor="#9F9F9F"
                    Text="{Binding Text}"
                    TextColor="#040404"
                    Visual="Material" />
            </Grid>
        </yummy:PancakeView>
    </ContentView.Content>
</ContentView>
