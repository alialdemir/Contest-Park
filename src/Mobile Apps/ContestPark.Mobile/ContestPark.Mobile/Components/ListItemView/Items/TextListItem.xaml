<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="ContestPark.Mobile.Components.TextListItem"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:ContestPark.Mobile.Components"
             xmlns:icon="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize">
    <ContentView.Content>
        <components:CustomGrid Padding="16,8,16,8"
                               ColumnSpacing="15"
                               CommandParameter="{Binding CommandParameter}"
                               SingleTap="{Binding SingleTap}">
            <components:CustomGrid.RowDefinitions>
                <RowDefinition Height="30" />
            </components:CustomGrid.RowDefinitions>
            <components:CustomGrid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </components:CustomGrid.ColumnDefinitions>

            <icon:IconImage Grid.Row="0"
                            Grid.Column="0"
                            Icon="{Binding Icon}"
                            IconColor="{StaticResource Primary}"
                            IconSize="24" />

            <Label Grid.Row="0"
                   Grid.Column="1"
                   FontSize="Default"
                   Text="{Binding Title}"
                   TextColor="White"
                   VerticalOptions="Center" />

            <icon:IconImage Grid.Row="0"
                            Grid.Column="2"
                            HorizontalOptions="End"
                            Icon="fas-angle-right"
                            IconColor="{StaticResource Primary}"
                            IconSize="16"
                            VerticalOptions="Center" />
        </components:CustomGrid>
    </ContentView.Content>
</ContentView>