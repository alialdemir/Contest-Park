<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ContestPark.Mobile.Components.ThumListItem"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Components="clr-namespace:ContestPark.Mobile.Components"
    xmlns:Converter="clr-namespace:ContestPark.Mobile.Converters"
    xmlns:effects="clr-namespace:ContestPark.Mobile.Components.LongPressedEffect"
    xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="thumListItemPage">
    <ContentView.Resources>
        <ResourceDictionary>
            <Converter:NegativeBooleanConverter x:Key="not" />
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <yummy:PancakeView
            Margin="0,0,0,8"
            Padding="0"
            BackgroundColor="{StaticResource White}"
            CornerRadius="8"
            Elevation="6"
            HasShadow="True"
            HeightRequest="80"
            IsClippedToBounds="True"
            Visual="Material">
            <Grid
                x:Name="cstmGrid"
                Padding="16,0,16,0"
                effects:LongPressedEffect.CommandParameter="{Binding Path=CommandParameter, Source={x:Reference thumListItemPage}}"
                effects:LongPressedEffect.LongPressed="{Binding Path=LongPressed, Source={x:Reference thumListItemPage}}"
                effects:LongPressedEffect.SingleTap="{Binding Path=SingleTap, Source={x:Reference thumListItemPage}}"
                ColumnSpacing="0"
                RowSpacing="0"
                VerticalOptions="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.Effects>
                    <effects:LongPressedEffect />
                </Grid.Effects>

                <ffimageloadingsvg:SvgCachedImage
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    HeightRequest="50"
                    Source="{Binding Path=Source, Source={x:Reference thumListItemPage}}"
                    WidthRequest="50" />

                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="16,0,0,0"
                    FontAttributes="Bold"
                    FontFamily="{StaticResource SofiaProSemiBold}"
                    FontSize="16"
                    LineBreakMode="TailTruncation"
                    Text="{Binding Path=Text, Source={x:Reference thumListItemPage}}"
                    TextColor="#430856" />

                <Components:HtmlLabel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="16,0,0,0"
                    FontFamily="{StaticResource SofiaProLight}"
                    FontSize="14"
                    LineBreakMode="WordWrap"
                    Text="{Binding Path=Detail, Source={x:Reference thumListItemPage}}"
                    TextColor="#181C2F" />

                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    FontAttributes="Bold"
                    FontFamily="{StaticResource GothamRoundedBold}"
                    FontSize="16"
                    HorizontalTextAlignment="End"
                    IsVisible="{Binding Path=IsShowRightText, Source={x:Reference thumListItemPage}}"
                    Text="{Binding Path=RightText2, Source={x:Reference thumListItemPage}}"
                    TextColor="{Binding Path=RightText2TextColor, Source={x:Reference thumListItemPage}}"
                    TextDecorations="{Binding Path=RightText2TextDecorations, Source={x:Reference thumListItemPage}}"
                    VerticalOptions="Center" />

                <Label
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    FontAttributes="Bold"
                    FontFamily="{StaticResource GothamRoundedBold}"
                    FontSize="16"
                    HorizontalTextAlignment="End"
                    IsVisible="{Binding Path=IsShowRightText, Source={x:Reference thumListItemPage}}"
                    Text="{Binding Path=RightText, Source={x:Reference thumListItemPage}}"
                    TextColor="{Binding Path=RightIconTextColor, Source={x:Reference thumListItemPage}}"
                    VerticalOptions="CenterAndExpand" />

                <!--<icon:IconImage
                    Grid.RowSpan="2"
                    Grid.Column="3"
                    HeightRequest="25"
                    Icon="{Binding Path=RightIconSource, Source={x:Reference thumListItemPage}}"
                    IconColor="{StaticResource Primary}"
                    IconSize="16"
                    IsVisible="{Binding Path=IsShowRightText, Source={x:Reference thumListItemPage}}"
                    WidthRequest="25" />-->
            </Grid>
        </yummy:PancakeView>
    </ContentView.Content>
</ContentView>
